{
  "version": 2,
  "buildCommand": "npm install",
  "outputDirectory": "src",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/ws",
      "dest": "/server.js",
      "check": true
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/src/$1",
      "continue": true
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MAX_FILE_SIZE": "52428800",
    "MAX_BATCH_FILES": "10",
    "COMPRESSION_CACHE_DURATION": "86400000",
    "MAX_CONCURRENT_COMPRESSIONS": "5"
  }
} 